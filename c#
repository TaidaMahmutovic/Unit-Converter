using System;

namespace UnitConverter
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Welcome to Unit Converter!");
            Console.WriteLine("Select Conversion Type: 1. Length, 2. Weight, 3. Temperature");
            int choice = int.Parse(Console.ReadLine());

            if (choice == 1) LengthConversion();
            else if (choice == 2) WeightConversion();
            else if (choice == 3) TemperatureConversion();
            else Console.WriteLine("Invalid choice.");
        }

        static void LengthConversion()
        {
            Console.WriteLine("Length Conversion: 1. Meters to Kilometers, 2. Kilometers to Miles, 3. Miles to Feet, 4. Feet to Inches");
            int ch = int.Parse(Console.ReadLine());
            Console.Write("Enter value: ");
            double val = double.Parse(Console.ReadLine());
            double res = 0;

            switch (ch)
            {
                case 1: res = val / 1000; Console.WriteLine($"{val} meters = {res} km."); break;
                case 2: res = val * 0.621371; Console.WriteLine($"{val} km = {res} miles."); break;
                case 3: res = val * 5280; Console.WriteLine($"{val} miles = {res} feet."); break;
                case 4: res = val * 12; Console.WriteLine($"{val} feet = {res} inches."); break;
                default: Console.WriteLine("Invalid length choice."); break;
            }
        }

        static void WeightConversion()
        {
            Console.WriteLine("Weight Conversion: 1. Grams to Kilograms, 2. Kilograms to Pounds, 3. Pounds to Ounces");
            int ch = int.Parse(Console.ReadLine());
            Console.Write("Enter value: ");
            double val = double.Parse(Console.ReadLine());
            double res = 0;

            switch (ch)
            {
                case 1: res = val / 1000; Console.WriteLine($"{val} grams = {res} kg."); break;
                case 2: res = val * 2.20462; Console.WriteLine($"{val} kg = {res} lbs."); break;
                case 3: res = val * 16; Console.WriteLine($"{val} lbs = {res} oz."); break;
                default: Console.WriteLine("Invalid weight choice."); break;
            }
        }

        static void TemperatureConversion()
        {
            Console.WriteLine("Temperature Conversion: 1. Celsius to Fahrenheit, 2. Fahrenheit to Kelvin, 3. Kelvin to Celsius");
            int ch = int.Parse(Console.ReadLine());
            Console.Write("Enter temperature: ");
            double val = double.Parse(Console.ReadLine());
            double res = 0;

            switch (ch)
            {
                case 1: res = (val * 9/5) + 32; Console.WriteLine($"{val} Celsius = {res} Fahrenheit."); break;
                case 2: res = (val - 32) * 5/9 + 273.15; Console.WriteLine($"{val} Fahrenheit = {res} Kelvin."); break;
                case 3: res = val - 273.15; Console.WriteLine($"{val} Kelvin = {res} Celsius."); break;
                default: Console.WriteLine("Invalid temperature choice."); break;
            }
        }
    }
}

